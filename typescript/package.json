{
  "name": "@northrelay/sdk",
  "version": "1.0.0",
  "description": "Official TypeScript/JavaScript SDK for NorthRelay Platform API",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./webhooks": {
      "types": "./dist/webhooks.d.ts",
      "import": "./dist/webhooks.mjs",
      "require": "./dist/webhooks.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "northrelay",
    "email",
    "transactional-email",
    "smtp",
    "api-client",
    "sdk",
    "typescript"
  ],
  "author": "NorthRelay <support@northrelay.ca>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/North-Relay/northrelay-sdks.git",
    "directory": "typescript"
  },
  "bugs": {
    "url": "https://github.com/North-Relay/northrelay-sdks/issues"
  },
  "homepage": "https://docs.northrelay.ca",
  "dependencies": {
    "axios": "^1.6.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "tsup": "^8.0.1",
    "vitest": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
